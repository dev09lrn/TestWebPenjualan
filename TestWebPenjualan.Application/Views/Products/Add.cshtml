@using TestWebPenjualan.Domain.Dtos.Product;
@model TestWebPenjualan.Domain.Dtos.Product.CreateProductDto;

<div class="container-fluid px-4">
    <h1 class="mt-4">Tambah Katalog Barang</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <center class="text-danger">@TempData["ErrorMessage"]</center>
    }

    <div class="card mb-4">

        <div class="col-lg-7">
            <div class="card-body">
                <form method="post" action="add">
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-3">
                        <label for="exampleFormControlInput1">Kode Barang</label>
                        <input asp-for="ProductCode" class="form-control" placeholder="Kode Barang" />
                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="exampleFormControlInput1">Nama Barang</label>
                        <input asp-for="Name" class="form-control" placeholder="Nama Barang" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="exampleFormControlSelect1">Satuan</label>
                        @{
                            var unitTypes = ViewData["unitTypes"];
                        }

                        <select class="form-control" id="UnitTypeId" name="UnitTypeId">
                            <option value="0">Pilih Satuan</option>
                            @if (unitTypes != null)
                            {
                                foreach (var unitType in (List<UnitType>)unitTypes)
                                {
                                    <option value="@unitType.UnitTypeId">@unitType.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="UnitTypeId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="exampleFormControlInput1">Barcode</label>
                        <input asp-for="Barcode" class="form-control" placeholder="Barcode" />
                        <span asp-validation-for="Barcode" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="exampleFormControlSelect1">Kategori</label>
                        @{
                            var categories = ViewData["categories"];
                        }

                        <select class="form-control" id="CategoryId" name="CategoryId">
                            <option value="0">Pilih Kategori</option>
                            @if (categories != null)
                            {
                                foreach (var category in (List<Category>)categories)
                                {
                                    <option value="@category.CategoryId">@category.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="exampleFormControlSelect1">Merek</label>
                        @{
                            var brands = ViewData["brands"];
                        }

                        <select class="form-control" id="BrandId" name="BrandId">
                            <option value="0">Pilih Merek</option>
                            @if (brands != null)
                            {
                                foreach (var brand in (List<Brand>)brands)
                                {
                                    <option value="@brand.BrandId">@brand.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="exampleFormControlInput1">Harga Jual</label>
                        <input asp-for="Price" class="form-control" placeholder="Price" step=".01" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-block" value="Submit" />
                        <a href="/products" class="btn btn-secondary btn-block ms-2">Cancel</a>
                    </div>
                        
                </form>                

            </div>
        </div>

    </div>
</div>

